@{
    Layout = "_Layout";
}
@using NUE.Models;
@model List<NUE.Models.Event>;
  <div class="containerDiv">
    <h1>2020 Events</H1>

    @if (@Model.Count == 0)
    {
      <h3>No events have been added yet!</h3>
    } 
    @foreach (Event musicEvent in Model)
    {
      <h2><b>@Html.ActionLink($"{musicEvent.EventTitle}", "Details", new { id = musicEvent.EventId })</b></h2>
    }   

    <br>
    <h4>@Html.ActionLink("New Event", "Create")</h4>
    <h4>@Html.ActionLink("Home", "Index", "Home")</h4> 
  </div>


@{
    Layout = "_Layout";
}
@using WebApp2.Models;
@model List<WebApp2.Models.Event>;
<h1>2020 Events</H1>

<br>
@if (User.Identity.IsAuthenticated)
{
  @if (@Model.Count == 0)
  {
    <h3>No events have been added yet!</h3>
  } 
  @foreach (Event musicEvent in Model)
  {
    <h3>Event <b>@Html.ActionLink($"{musicEvent.EventTitle}", "Details", new { id = musicEvent.EventId })</b></h3>
  }   

<br>
<h4>@Html.ActionLink("New Event", "Create")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4> 
}
else
{
  <h3>Please log in or register in order to access.</h3>
  
}